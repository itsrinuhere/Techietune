<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 <hibernate-mapping>
    	<class name="com.library.search.Library" table ="library">
            <id name="book_id"  type ="int" column="book_id">
              <generator class="assigned"/>  
              </id>
            <property name ="book_name" column="book_name"/>
            <property name ="book_type" column ="book_type"/>
            <property name ="book_subject" column ="book_subject"/>
            <property name ="book_description" column ="book_description"/>
            <property name ="link" column ="link" />
            <property name ="book_tags" column="book_tags"/>
            <property name ="book_regulation" column="book_regulation" />
           	<property name ="book_auther" column="book_auther"/>
            <property name ="book_category" column="book_category"/>
        </class>
    </hibernate-mapping> 